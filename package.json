{
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev --host",
    "dev-linux": "NODE_OPTIONS=--max_old_space_size=8192 nuxt dev --host",
    "dev-windows": "set NODE_OPTIONS=--max_old_space_size=8192 && nuxt dev --host",
    "generate-ci": "bash ./tools/ci-generate.sh",
    "generate-linux": "NODE_OPTIONS=--max_old_space_size=8192 nuxt generate",
    "generate-windows": "set NODE_OPTIONS=--max_old_space_size=8192 && nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "get-operator-release": "python tools/get_operator_release.py"
  },
  "devDependencies": {
    "@iconify-json/bx": "^1.1.7",
    "@iconify-json/emojione": "^1.1.7",
    "@iconify-json/fa-solid": "^1.1.5",
    "@iconify-json/game-icons": "^1.1.3",
    "@iconify-json/heroicons": "^1.1.12",
    "@iconify-json/logos": "^1.1.37",
    "@iconify-json/material-symbols": "^1.1.59",
    "@iconify-json/mdi": "^1.1.54",
    "@iconify-json/ph": "^1.1.6",
    "@iconify-json/uil": "^1.1.5",
    "@nuxt/ui": "^2.9.0",
    "@nuxtjs/i18n": "^8.0.0-rc.5",
    "@types/node": "^18.8.0",
    "import-sort-style-module": "^6.0.0",
    "nuxt": "^3.7.4",
    "nuxt-icon": "^0.1.7",
    "nuxt-lodash": "^2.4.1",
    "postcss": "^8.4.19",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.8",
    "prettier-plugin-css-order": "^1.3.1",
    "prettier-plugin-import-sort": "^0.0.7",
    "prettier-plugin-organize-attributes": "^0.0.5",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "sass": "^1.56.0",
    "stylelint": "^14.16.1",
    "stylelint-config-clean-order": "^5.0.1",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard-scss": "^6.1.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "stylelint-config-tailwindcss": "^0.0.7",
    "zod": "^3.21.4"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard-scss",
      "stylelint-config-standard-vue/scss",
      "stylelint-config-tailwindcss/scss",
      "stylelint-config-prettier-scss",
      "stylelint-config-clean-order"
    ],
    "rules": {
      "at-rule-no-unknown": null,
      "function-no-unknown": null,
      "at-rule-empty-line-before": null
    }
  },
  "prettier": {
    "pluginSearchDirs": false,
    "plugins": [
      "prettier-plugin-import-sort",
      "prettier-plugin-organize-attributes",
      "prettier-plugin-tailwindcss"
    ],
    "semi": false
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx, .vue": {
      "style": "module",
      "parser": "typescript"
    }
  }
}
